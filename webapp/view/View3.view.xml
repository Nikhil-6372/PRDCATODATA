<mvc:View controllerName="com.demo.b73ui5app.controller.View3"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true">

    <Page title="I'm View3" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <f:SimpleForm editable ="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2" emptySpanL="6" emptySpanM="6" >
                <f:content>
                    <Label text = "Product Id"/>
                    <Input id = "idPrdid" value = "{Prdid}" />
                    <Label text = "Product Name"/>
                    <Input id = "idName" value = "{Prdname}"/>
                    <Label text = "Product Category"/>
                    <Input id = "idCat" value = "{Prdcategory}"/>
                    <Label text ="Product Price"/>
                    <Input id ="idPrice" value = "{Prdprice}"/>
                    <Label text = "Currency Code"/>
                    <Input id = "idCurrCode" value = "{Currcode}"/>
                    <Label text ="Product Rating"/>
                    <Input id ="idRating" value = "{Rating}"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button text ="Save" icon = "sap-icon://save" type = "Emphasized" press = "onPressSave"/>
                    <Button text ="Cancel" icon = "sap-icon://cancel" type ="Negative" press ="onNavBack"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>