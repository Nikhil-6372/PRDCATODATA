<mvc:View controllerName="com.demo.b73ui5app.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true">

    <Page title="I'm View2" showNavButton="true" navButtonPress="onNavBack">
        <content>

            <ObjectHeader backgroundDesign="Solid" title = "{Prdname}" number="{Prdprice}" numberUnit="{Currcode}">
                <attributes>
                    <ObjectAttribute text="{Prdid}"></ObjectAttribute>
                </attributes>
                <statuses>
                    <ObjectStatus text="{Rating}"></ObjectStatus>
                </statuses>
            </ObjectHeader>

            <IconTabBar>
                <items>
                    <IconTabFilter icon="sap-icon://information">
                        <f:SimpleForm id="idSF" title="Product Details" editable="false">
                <f:content>
                    <Label text="Product Id"/>
                    <Text text="{Prdid}"/>
                    <Label text="Product Name"/>
                    <Text text="{Prdname}"/>
                    <Label text="Product Price"/>
                    <Text text="{Prdprice}"/>
                    <Label text="Code"/>
                    <Text text="{Currcode}"/>
                    <Label text="Product Category"/>
                    <Text text="{Prdcategory}"/>
                    <Label text="Product Ratings"/>
                    <Text text="{Rating}"/>
                </f:content>
            </f:SimpleForm>
        </IconTabFilter>

        <IconTabFilter icon = "sap-icon://attachment">
            <Table items = "{toAttachments}">
                <columns>
                    <Column>
                        <Text text = "Product ID"/>
                    </Column>
                    <Column>
                        <Text text = "File Name"/>
                    </Column>
                    <Column>
                        <Text text = "Download"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                      <cells>
                        <Text text = "{Prdid}"/>
                        <Text text = "{Filename}"/>
                        <Button icon = "sap-icon://download" type = "Negative" press = "onDownload"/>
                      </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </IconTabFilter>
        </items>
        </IconTabBar>
        </content>
    </Page>
</mvc:View>