         <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2" emptySpanL="6" emptySpanM="6">
         <f:content>
         <Label text="Product ID"/>
         <Input id="idPrdid" showValueHelp="true" valueHelpRequest="onPressF4Help"/>
         </f:content>
         </f:SimpleForm>
            <Table id="idTable" items="{/ProductSet}" mode="SingleSelectLeft"  class ="sapUiMediumMarginBeginEnd" width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Product List"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://excel-attachment" type="Emphasized"/>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Product ID"/>
                    </Column>
                    <Column>
                        <Text text="Product Name"/>
                    </Column>
                    <Column>
                        <Text text="Product Catagory"/>
                    </Column>
                    <Column>
                        <Text text="Product Price"/>
                    </Column>
                    <Column>
                        <Text text="Currency Code"/>
                    </Column>
                    <Column>
                        <Text text="Ratings"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active"  press="onPressRow">
                        <Text text="{Prdid}"/>
                        <Text text="{Prdname}"/>
                        <Text text="{Prdcategory}"/>
                        <Text text ="{Prdprice}"/>
                        <Text text ="{Currcode}"/>
                        <Text text ="{Rating}"/>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
         <Bar>
         <contentRight>
            <Button text="Submit" type="Emphasized" press="onPressSubmit"/>
         </contentRight>
         </Bar>
        </footer>
    </Page>
</mvc:View>
