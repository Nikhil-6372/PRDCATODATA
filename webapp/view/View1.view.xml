<mvc:View xmlns:odata="sap.ui.comp.odata"
    controllerName="com.demo.b73ui5app.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="page" title="I am View1">
        <content>

            <!-- This is the List Ui Element Binding when Client using the app morew in the mobile we are using this method
            <List items="{/ProductSet}" class="sapUiMediumMarginBeginEnd" width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Text text="Product List"/>
                        <ToolbarSpacer></ToolbarSpacer>
                        <Button icon="sap-icon://excel-attachment" type="Emphasized"/>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem title="{Prdname}" number="{Prdprice}" numberUnit="{Currcode}">
                        <attributes>
