                        <ObjectAttribute text="{Prdid}"></ObjectAttribute>
                    </ObjectListItem>
                </items>
            </List> -->


        
            <Panel headerText = "Search Products" expandable = "true" expanded="true">
              <f:SimpleForm editable ="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0">
                <f:content>
                  <core:Title text="Filters:"/>
                    <Label text="Product ID"/>
                    <Input id="idPrdid" showValueHelp="true" valueHelpRequest="onPressF4Help"/>

                    <Label text ="Product Name"/>
                    <Input id ="idPrdname"/>

                    <Label text="Product Catagory"/>
                    <ComboBox id="idPrdCategory">
                    <items>
                        <core:Item  text = "ELECTRONICS" key = "ELECTRONICS" />
                        <core:Item  text = "SPORTS" key = "SPORTS" />
                        <core:Item  text = "ACCESSORIES" key = "ACCESSORIES" />
                    </items>
                    </ComboBox>

                    <Label text = "Product Rating"/>


                    <Label text ="Product Ratings"/>
                    <Input id ="idPrdrating"/>

                    <Label text ="Product Price"/>
                    <ComboBox id="idPriceOPr" selectionChange = "onSelOpr">
                        <items>
                            <core:Item text ="Equals to" key="EQ" />
                            <core:Item text ="Not Equals to" key="NE" />
                            <core:Item text ="Greater than" key="GT" />
                            <core:Item text ="Less than" key="LT" />    
                            <core:Item text ="Greater than or equals to" key="GE" />
                            <core:Item text ="Less than or equals to" key="LE" />
                            <core:Item text ="Between" key="BT" />


                        </items>
                    </ComboBox>
                    <Input id= "idRangeLow"></Input>
                    <Input id="idRangeHigh" visible = "false"></Input>

                    <core:Title text="Sorters:"/>
                    <Label text ="Sort Field"/>
                    <ComboBox  id= "idSortField"/>
                    <items>
                        <core:Item text = "Product ID" key="Prdid"/>
                        <core:Item text = "Name" key="Prdname"/>
                        <core:Item text = "Category" key="Prdcategory"/>
                        <core:Item text = "Price" key="Prdprice"/>
                        <core:Item text = "Rating" key="Rating"/>

                    </items>

                    </f:content>
                </f:SimpleForm>

                <FlexBox justifyContent="End">
                <Button text="Go" type = "Emphasized" icon="sap-icon://accept" press="onPressGo"/>
                <Button text="Reset" type ="Negative" icon="sap-icon://reject" class="sapUiTinyMarginBegin" press="onPressReset"/>
                </FlexBox>
            </Panel>

            <Table
                id="idTable" items="{/ProductSet}" mode="SingleSelectLeft" class="sapUiMediumMarginBeginEnd" width="auto">

                <headerToolbar>
                    <Toolbar>
                        <Title text="Product List"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://excel-attachment" type="Emphasized" press="onExportToXL"/>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Product ID"/>
                    </Column>
                    <Column>
                        <Text text="Product Name"/>
                    </Column>
                    <Column>
                        <Text text="Product Catagory"/>
                    </Column>
                    <Column>
                        <Text text="Product Price"/>
                    </Column>
                    <Column>
                        <Text text="Currency Code"/>
                    </Column>
                    <Column>
                        <Text text="Ratings"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active" press="onPressRow">
                        <Text text="{Prdid}"/>
                        <Text text="{Prdname}"/>
                        <ObjectStatus text="{Prdcategory}" state="{path:'Prdcategory', formatter:'.f.colorCategory'}"/>
                        <Text text="{path:'Prdprice', formatter:'.f.formatCurrency'}"/>
                        <Text text="{Currcode}"/>
                        <Text text="{Rating}"/>
                    </ColumnListItem>
                </items>

            </Table>

        </content>

        <footer>
            <Bar>
                <contentRight>
                    <Button text="Submit" type="Emphasized" press="onPressSubmit"/>
                </contentRight>
            </Bar>
        </footer>

    </Page>

</mvc:View>
